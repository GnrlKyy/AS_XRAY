def dec(lst):
    data = []
    nums = []
    lst = lst.split('.')

    for n in range(0, len(lst), 2):
        data.append(int(lst[n]))

    for m in range(1, len(lst), 2):
        nums.append(int(lst[m]))

    result = ''
    for x in range(len(data)):
        result += chr((data[x] - len(data) >> (nums[x] - len(data))) & 255)

    return result


enctext = input('Input Encrypted Text:\n=> ').split(':')

if len(enctext) == 2:
    user = dec(enctext[0])
    passwd = dec(enctext[1])
    print("HcDecode By Enzo (c) 2023\n=========================")
    print('Username: {0}\nPassword: {1}'.format(user, passwd))
else:
    print("Incorrect input format. Make sure to use the format: username:password")
